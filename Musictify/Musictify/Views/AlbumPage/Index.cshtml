@model IEnumerable<Musictify.Models.Album>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

    <!-- Latest Albums-->
<section class="py-5">
    <div class="container px-5 my-5">
        <div class="text-center mb-5">
            <h1 class="h1 fw-bolder text">@localizer["text1"]</h1>
            <br />
        </div>
        <div class="row gx-6">

            @foreach (var item in Model)
            {
                <div class="col-lg-3">
                    <div class="position-relative mb-5 mx-auto">
                        <img class="img-fluid rounded-3 mb-3" src=@Html.DisplayFor(modelItem => item.ImageUrl) width="300" height="300">
                        <center><a class="h4 text-white-50 fw-bolder text-decoration-none link-dark stretched-link" asp-action="Details" asp-route-id="@item.AlbumID">@item.AlbumName</a></center>
                    </div>
                </div>
            }
        </div>

    </div>
</section>

