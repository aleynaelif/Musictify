@model IEnumerable<Musictify.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryID" class="text-info">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryID" class="text-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryID" class="text-info">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
