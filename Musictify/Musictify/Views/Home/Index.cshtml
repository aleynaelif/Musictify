@model IEnumerable<Musictify.Models.Album>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer


    <!-- Latest Albums-->
<section class="py-5">
    <div class="container px-5 my-5">
        <div class="text-center mb-5">
            <h1 class="fw-bolder text-light">@localizer["text1"]</h1>
            <p class="lead fw-normal text-muted mb-0">@localizer["text2"]</p>
        </div>



        <div class="row gx-3">
          

            @foreach (var item in Model)
            {
                <div class="col-lg-3">
                    <div class="position-relative mb-5">
                        <img class="img-fluid rounded-3 mb-3" src="@item.ImageUrl" alt="..." />
                        <center><a class="h3 fw-bolder text-white-50 text-decoration-none link-dark stretched-link" asp-action="Details" asp-route-id="@item.AlbumID">@item.AlbumName</a></center>
                    </div>
                </div>
            }

            
        </div>
    </div>
</section>

<!-- Bootstrap core JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
