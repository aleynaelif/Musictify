@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Musictify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <style>
        body {
            font-family: Helvetica, sans-serif;
            background-color: #252526;
            color: rgb(202 207 187);
        }
    </style>
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success ">
            <div class="container px-5">
                <a class="navbar-brand" asp-controller="Home">Musictify</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home">@localizer["text1"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="AlbumPage">@localizer["text2"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SingerPage">@localizer["text3"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SongsPage">@localizer["text4"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="PlaylistPage">@localizer["text5"]</a></li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@localizer["text6"]</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Album">Album</a>
                                        <a class="dropdown-item" asp-controller="Category">Category</a>
                                        <a class="dropdown-item" asp-controller="Playlist">Playlist</a>
                                        <a class="dropdown-item" asp-controller="PlaylistSongs">PlaylistSongs</a>
                                        <a class="dropdown-item" asp-controller="Singer">Singer</a>
                                        <a class="dropdown-item" asp-controller="SingerAlbum">SingerAlbum</a>
                                        <a class="dropdown-item" asp-controller="SingerSongs">SingerSongs</a>
                                        <a class="dropdown-item" asp-controller="Songs">Songs</a>

                                    </div>
                                </li>
                            }
                        }

                    <partial name="_LoginPartial" />

                    <partial name="_Culture" />

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-success py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0 text-white">Copyright &copy; 2021 - Musictify</div></div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
