@model Musictify.Models.Songs

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Songs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SongsID" />
            <div class="form-group">
                <label asp-for="SongsName" class="control-label"></label>
                <input asp-for="SongsName" class="form-control" />
                <span asp-validation-for="SongsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Collab" class="control-label"></label>
                <input asp-for="Collab" class="form-control" />
                <span asp-validation-for="Collab" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lyrics" class="control-label"></label>
                <input asp-for="Lyrics" class="form-control" />
                <span asp-validation-for="Lyrics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YoutubeLink" class="control-label"></label>
                <input asp-for="YoutubeLink" class="form-control" />
                <span asp-validation-for="YoutubeLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumID" class="control-label"></label>
