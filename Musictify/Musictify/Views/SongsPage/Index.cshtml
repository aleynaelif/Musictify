@model IEnumerable<Musictify.Models.Songs>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<section class="py-5">
    <div class="container px-5 my-5">
        <div class="text-center mb-5">
            <h1 class="h1 fw-bolder text">@localizer["text1"]</h1>
            <br />
        </div>
        <div class="row gx-6">

            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="position-relative mb-5">
                        <img class="img-fluid rounded-3 mb-3" src=@item.Album.ImageUrl . width="100" height="100">
                        <a style="margin-left: 10px;" class="h4 text-white-50 fw-bolder text-decoration-none link-dark stretched-link" asp-action="Details" asp-route-id="@item.SongsID">@item.SongsName</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>




